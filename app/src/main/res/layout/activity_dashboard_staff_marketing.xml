<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DashboardStaffMarketingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingStart="12dp"
        android:paddingTop="15dp"
        android:paddingBottom="10dp">

        <ImageView
            android:id="@+id/img_back_dashb_staff_market"
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginEnd="15dp"
            android:src="@drawable/icon_back1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/opensans_semibold"
            android:text="Dashboard Staff Marketing"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="end">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginEnd="15dp"
                android:foregroundGravity="right"
                android:src="@drawable/icon_dashboard" />

        </LinearLayout>

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="ExtraText">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardElevation="1dp"
                app:contentPadding="12.00dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/opensans_bold"
                        android:text="Periode"
                        android:textColor="@color/black" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal"
                        app:layout_scrollFlags="scroll|enterAlways">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/btn_date_form_staff"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackgroundBorderless"
                            app:cardBackgroundColor="@color/gray"
                            app:cardCornerRadius="5dp"
                            app:cardUseCompatPadding="true">

                            <TextView
                                android:id="@+id/tv_date_from_staff"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:drawableStart="@drawable/icon_date2"
                                android:drawablePadding="12dp"
                                android:fontFamily="@font/opensans_medium"
                                android:text="01-01-2022"
                                android:textColor="@color/white" />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="-"
                            android:fontFamily="@font/opensans_bold"
                            android:textSize="14sp" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/btn_date_to_staff"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackgroundBorderless"
                            app:cardBackgroundColor="@color/gray"
                            app:cardCornerRadius="5dp"
                            app:cardUseCompatPadding="true">

                            <TextView
                                android:id="@+id/tv_date_to_staff"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:drawableStart="@drawable/icon_date2"
                                android:drawablePadding="12dp"
                                android:fontFamily="@font/opensans_medium"
                                android:text="01-01-2022"
                                android:textColor="@color/white" />

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.7dp"
                        android:layout_marginBottom="10dp"
                        android:background="#8F8F8F" />


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        app:cardBackgroundColor="@color/gray"
                        app:cardCornerRadius="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/opensans_medium"
                                android:text="Total Transaksi"
                                android:textColor="@color/white" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="20dp"
                                android:fontFamily="@font/opensans_bold"
                                android:gravity="center"
                                android:text="120.0000"
                                android:textColor="@color/white"
                                android:textSize="40dp" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            // NGGK DIPAKAI
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardElevation="1dp"
                app:contentPadding="12.00dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/btn_list_loket_terdampak"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        app:cardBackgroundColor="@color/red"
                        app:cardCornerRadius="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/opensans_medium"
                                android:text="List Loket Terdampak Error"
                                android:gravity="center"
                                android:layout_margin="8dp"
                                android:textColor="@color/white" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Klik disini untuk melihat daftar list"
                        android:fontFamily="@font/opensans_medium"
                        android:textColor="@color/gray"
                        android:gravity="right"
                        android:layout_marginEnd="5dp"
                        android:textSize="10dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            
            <androidx.cardview.widget.CardView
                app:contentPadding="12dp"
                app:cardElevation="1dp"
                android:id="@+id/transaksi_terbanyak_staff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Informasi Transaksi"
                        android:fontFamily="@font/opensans_bold"
                        android:textColor="@color/black"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="List Transaksi Terbanyak (Layanan)"
                        android:fontFamily="@font/opensans_italic"
                        android:gravity="end"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/gray"/>

                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/chart_terbanyak_staff"
                        android:layout_width="220dp"
                        android:layout_height="220dp"
                        android:layout_gravity="center"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/chart_terbanyak_legend_staff"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                app:contentPadding="12dp"
                app:cardElevation="1dp"
                android:id="@+id/transaksi_gagal_staff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="List Transaksi Gagal (Layanan)"
                        android:fontFamily="@font/opensans_italic"
                        android:gravity="end"
                        android:textColor="@color/gray"/>

                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/chart_gagal_staff"
                        android:layout_width="220dp"
                        android:layout_height="220dp"
                        android:layout_gravity="center"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_chart_terbanyak_legend_staff"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>